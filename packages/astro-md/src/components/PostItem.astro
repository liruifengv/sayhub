---
import { Picture } from '@astrojs/image/components'
import PostTags from '~/components/Tags.astro'

export interface Props {
  post: {
    title: string
    description: string
    pubDate?: string
    updatedDate?: string
    image?: string
    tags?: Array<string>
  }
  url: string
}

const { post, url } = Astro.props
---

<div class="flex flex-col md:flex-row bg-white md:h-48 max-w-sm md:max-w-3xl rounded-lg">
  {
    post.image && (
      <div class="md:shrink-0 w-full md:w-80">
        <a href={url} class="inline-block h-full">
          <Picture
            class="w-full h-full rounded-t-lg md:rounded-none md:rounded-l-lg"
            src={post.image}
            alt="descriptive text"
            widths={[400, 900]}
            sizes="(max-width: 900px) 400px, 900px"
            alt={post.title}
            aspectRatio="16:9"
          />
        </a>
      </div>
    )
  }
  <div class="py-6 px-6">
    <div class="text-xl font-heading font-bold">
      <a class="hover:text-primary-600 transition ease-in duration-200 line-clamp-1 text-ellipsis" href={url}>
        {post.title}
      </a>
    </div>
    <div class="mt-2 font-normal line-clamp-2 text-ellipsis">{post.description}</div>
    <div class="mt-2 font-light">发表日期：{post.pubDate}</div>
    {post.tags?.length > 0 && <PostTags tags={post.tags} class="mt-2" />}
  </div>
</div>
