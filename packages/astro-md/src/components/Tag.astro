---
const basename = import.meta.env.BASE_URL

const className = `bg-[#195C28] rounded-md text-[#f5f5f7] inline-block mr-4 mt-4 mb-4 py-0.5 px-2`

const { tag } = Astro.props
---

<div class={className} transition:animate="slide">
  <a href={`${basename}tag/${tag.name}`}>
    <slot />
  </a>
</div>
